<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <hk.haowei.wifi.view.ImageViewEx
            android:id="@+id/messageIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:border_width="0dp"
            app:border_color="#00000000"
            android:src="@drawable/avatar"/>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/messageIcon"
            android:layout_toStartOf="@+id/timeArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/messageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统消息"
                android:textSize="17sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/messageSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="@string/location_invalid_description"
                android:textColor="#888888"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/timeArea"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:53"
                android:textColor="#888888"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="right"
                android:text="10"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="10sp"
                android:background="@drawable/message_item_tips"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
